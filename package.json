{
  "name": "restaurant-pos",
  "version": "1.0.0",
  "description": "Offline Restaurant POS Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "start": "electron ."
  },
  "keywords": [
    "pos",
    "restaurant",
    "electron",
    "react"
  ],
  "author": "Restaurant POS",
  "license": "ISC",
  "build": {
    "appId": "com.restaurant.pos",
    "productName": "Restaurant POS",
    "directories": {
      "output": "dist-installer",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "public/icon.png"
    },
    "linux": {
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Restaurant POS",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "sharp": "^0.34.5",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0"
  }
}
